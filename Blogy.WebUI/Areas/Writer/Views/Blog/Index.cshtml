@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>Benim Bloglarım</h2>
    </div>
</div>

<div class="row">
    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Henüz hiç blog yazısı eklememişsiniz.</div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.CoverImage" class="card-img-top" alt="@item.Tittle" style="height: 200px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <span class="badge bg-primary">@item.Category.CategoryName</span>
                        </div>

                        <h5 class="card-title">@item.Tittle</h5>

                        <p class="card-text">
                            @(item.Description != null && item.Description.Length > 100
                                                ? item.Description.Substring(0, 100) + "..."
                                                : item.Description)
                </p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a href="/Writer/Blog/UpdateBlog/@item.Id" class="btn btn-outline-info btn-sm w-100 me-2">
                                <i class="fa fa-edit"></i> Güncelle
                            </a>
                            <a href="/Writer/Blog/DeleteBlog/@item.Id"
                               onclick="return confirm('Bu blog yazısını silmek istediğinize emin misiniz?')"
                               class="btn btn-outline-danger btn-sm w-100">
                                <i class="fa fa-trash"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<div class="row mt-3">
    <div class="col-md-12 text-center">
        <a href="/Writer/Blog/CreateBlog" class="btn btn-primary btn-lg">
            <i class="fa fa-plus"></i> Yeni Blog Oluştur
        </a>
    </div>
</div>