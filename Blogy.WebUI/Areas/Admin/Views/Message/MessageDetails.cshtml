@using Blogy.Business.DTOs.MessageDtos
@model UpdateMessageDto
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Mesaj İçeriği</h5>
                <small class="text-muted float-end">@(((DateTime)Model.CreatedDate).ToString("dd MMMM yyyy HH:mm"))</small>
            </div>
            <div class="card-body">
                <form>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">Gönderen Adı</label>
                        <input type="text" class="form-control" value="@Model.Name" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mail Adresi</label>
                        <input type="text" class="form-control" value="@Model.Email" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Konu</label>
                        <input type="text" class="form-control" value="@Model.Subject" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mesaj İçeriği</label>
                        <textarea class="form-control" style="height: 150px" readonly>@Model.Content</textarea>
                    </div>

                    <a href="/Admin/Message/Index" class="btn btn-primary">Gelen Kutusuna Dön</a>
                    <a href="mailto:@Model.Email" class="btn btn-dark">Yanıtla (Mail)</a>
                </form>
            </div>
        </div>
    </div>
</div>
