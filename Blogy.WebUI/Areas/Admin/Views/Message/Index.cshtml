@model List<Blogy.Business.DTOs.MessageDtos.ResultMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<div class="card">
    <div class="card-header border-bottom">
        <h5 class="card-title mb-0">Gelen Kutusu</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Gönderen</th>
                        <th>Konu</th>
                        <th>Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Subject</td>
                                <td>
                                    @if (item.IsRead)
                                    {
                                        <span class="badge bg-label-success">Okundu</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-label-warning">Okunmadı</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/Message/MessageDetails/@item.Id" class="btn btn-sm btn-info">
                                        <i class="bx bx-envelope"></i> Oku
                                    </a>
                                    <a href="/Admin/Message/DeleteMessage/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">
                                        <i class="bx bx-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                Hiç mesajınız yok.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
