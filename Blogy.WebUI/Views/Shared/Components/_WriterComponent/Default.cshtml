@using Blogy.Entity.Entities
@model List<AppUser>
@*
   _WriterComponent
*@


<div class="col-xl-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title font-weight-medium mb-4">Yazarlarımız</h4>

            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6 mb-4">

                        <div class="card border border-light shadow-sm h-100">
                            <div class="card-body text-center">

                                <img src="@item.ImageUrl" alt="@item.FirstName" class="img-lg rounded-circle mb-3" style="object-fit:cover; width:100px; height:100px;" />

                                <h5 class="font-weight-bold text-dark mb-1">@item.FirstName @item.LastName</h5>

                                <p class="text-muted text-small mb-0">@(item.UserName ?? "Yazar")</p>

                            </div>
                        </div>

                    </div>
                }

            </div>
        </div>
    </div>
</div>