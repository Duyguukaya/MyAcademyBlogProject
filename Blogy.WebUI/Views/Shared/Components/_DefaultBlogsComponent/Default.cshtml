@model List<ResultCategoryDto>

<style>
	.post-entry-alt {
		border: 1px solid #ddd;
		padding: 15px;
		border-radius: 5px;
		transition: transform 0.3s;
		/* Yeni kod */
		height: 500px; /* Deneme için, uygun değeri bulun */
		display: flex; /* İçerikleri hizalamak için flex kullanıyoruz */
		flex-direction: column; /* İçerikleri dikey sırala */
	}

		.post-entry-alt .excerpt {
			flex-grow: 1; /* Excerpt div'inin kalan boşluğu doldurmasını sağlar */
			display: flex;
			flex-direction: column;
			justify-content: space-between; /* İçeriği dikeyde yayar */
		}

			.post-entry-alt .excerpt p:last-of-type { /* Son "Devamını Oku" paragrafı */
				margin-top: auto; /* En alta hizala */
			}
</style>

@foreach (var category in Model)
{
	<section class="section">
		<div class="container">

			<div class="row mb-4">
				<div class="col-sm-6">
					<h2 class="posts-entry-title">@category.CategoryName</h2>
				</div>
				<div class="col-sm-6 text-sm-end"><a href="/Blog/GetBlogsByCategory/@category.Id" class="read-more">Tümünü Gör</a></div>
			</div>

			<div class="row">
				@if (category.Blogs != null)
				{
					@foreach (var blog in category.Blogs.OrderByDescending(b => b.CreatedDate).Take(3))
					{
						<div class="col-lg-4 mb-4">
							<div class="post-entry-alt">
								<a href="#" class="img-link">
									<img src="@blog.CoverImage" alt="Image" class="img-fluid">
								</a>
								<div class="excerpt">

									<h2><a href="#">@blog.Tittle</a></h2>
									<div class="post-meta align-items-center text-left clearfix">
										<figure class="author-figure mb-0 me-3 float-start">
											<img src="@blog.Writer.ImageUrl" alt="Image" class="img-fluid">
										</figure>
										<span class="d-inline-block mt-1">By <a href="#">@blog.Writer.FullName</a></span>
										<span>&nbsp;-&nbsp; @blog.CreatedDate.ToShortDateString()</span>
									</div>

									<p>@(blog.Description.Length < 100 ? blog.Description : blog.Description.Substring(0, 100) + "...")</p>
									<p><a href="/Blog/BlogDetails/@blog.Id" class="read-more">Devamını Oku</a></p>
								</div>
							</div>
						</div>
					}
				}
			</div>

		</div>
	</section>

}
