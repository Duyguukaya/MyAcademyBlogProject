@using Blogy.Business.DTOs.MessageDtos
@model CreateMessageDto
@*
	_MessageComponent
*@

<div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
    <form asp-controller="Contact" asp-action="SendMessage" method="post">
        <div class="row">

            <div class="col-6 mb-3">
                <input type="text" class="form-control" asp-for="Name" placeholder="Your Name" required>
            </div>

            <div class="col-6 mb-3">
                <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required>
            </div>

            <div class="col-12 mb-3">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required>
            </div>

            <div class="col-12 mb-3">
                <textarea asp-for="Content" cols="30" rows="7" class="form-control" placeholder="Message" required></textarea>
            </div>

            <div class="col-12">
                <input type="submit" value="Send Message" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>