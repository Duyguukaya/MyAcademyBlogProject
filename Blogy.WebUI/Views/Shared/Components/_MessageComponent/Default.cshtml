@using Blogy.Business.DTOs.MessageDtos
@model CreateMessageDto
@*
	_MessageComponent
*@

<div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
    <form asp-controller="Contact" asp-action="SendMessage" method="post">
        <div class="row">

            <div class="col-6 mb-3">
                <input type="text" class="form-control" asp-for="Name" placeholder="İsim Soyisminiz" required>
            </div>

            <div class="col-6 mb-3">
                <input type="email" class="form-control" asp-for="Email" placeholder="Mail Adresiniz" required>
            </div>

            <div class="col-12 mb-3">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Konu" required>
            </div>

            <div class="col-12 mb-3">
                <textarea asp-for="Content" cols="30" rows="7" class="form-control" placeholder="Mesaj" required></textarea>
            </div>

            <div class="col-12">
                <input type="submit" value="Send Message" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["AutoReplyMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            Swal.fire({
                title: 'Teşekkürler!',
                text: '@Html.Raw(TempData["AutoReplyMessage"])', // HTML karakterlerini düzeltir
                icon: 'success',
                confirmButtonText: 'Tamam',
                confirmButtonColor: '#3085d6'
            });
        });
    </script>
}